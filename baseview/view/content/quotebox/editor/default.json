{
    "editors": {
        "quote": {
            "selector": "h3",
            "fn": "EditRich",
            "menu": "rich_text",
            "key": "fields.quote",
            "placeholder": "Click to add quote",
            "modal": false,
            "allowReverting": true
        },
        "author": {
            "selector": "p",
            "fn": "EditRich",
            "menu": "rich_text",
            "key": "fields.author",
            "placeholder": "Click to add author",
            "allowReverting": true
        }
    },
    "toolMenus": {
        "rich_text": {
            "inheritPath": "menu/tool/rich_text.json"
        }
    },
    "contentMenus": {
        "default": {
            "inheritPath": "menu/content/basemenu.json",
            "items": {
                "ai": {
                    "icon": "labicon-magic_wand",
                    "title": "Labrador AI - Text completion",
                    "group": "g5",
                    "items": {
                        "extractQuote": {
                            "icon": "labicon-magic_wand",
                            "text": "Extract quote",
                            "callback": "dispatch",
                            "group": "g5A",
                            "params": {
                                "function": "textAssistant.generateContent",
                                "featureName": "extractQuote",
                                "localizedStringPath": false
                            }
                        },
                        "extractQuote_settings": {
                            "icon": "labicon-edit",
                            "text": "Extract quote settings",
                            "callback": "dispatch",
                            "group": "g5A",
                            "params": {
                                "function": "textAssistant.openFeatureSettings",
                                "featureName": "extractQuote"
                            }
                        }
                    }

                },
                "style": {
                    "inheritPath": "menu/buttons/styles.json",
                    "group": "g4"
                },
                "large_text": {
                    "group": "g4",
                    "icon": "labicon-textSizeUp",
                    "title": "Large text",
                    "callback": "toggleKeyAndValue",
                    "key": "metadata.size_small",
                    "onValue": false,
                    "offValue": true,
                    "bindings": [
                        {
                            "path": "metadata.size_small",
                            "attribute": "value",
                            "valueTransformer": "toBoolean"
                        }
                    ]
                },
                "small_text": {
                    "group": "g4",
                    "icon": "labicon-textSizeDown",
                    "title": "Small text",
                    "callback": "toggleKeyAndValue",
                    "key": "metadata.size_small",
                    "onValue": true,
                    "offValue": false,
                    "bindings": [
                        {
                            "path": "metadata.size_small",
                            "attribute": "value",
                            "valueTransformer": "toBoolean"
                        }
                    ]
                },
                "style_list": {
                    "group": "g5",
                    "icon": "labicon-spinner_1",
                    "title": "Layout options",
                    "items": [
                        {
                            "group": "g1",
                            "text": "Speech bubbles",
                            "title": "Speech bubbles",
                            "value": false,
                            "onValue": true,
                            "offValue": false,
                            "onValueCondition": "lab-key-is-true",
                            "bindToSelection": "style_list",
                            "items": [
                                {
                                    "text": "Square",
                                    "icon": "labicon-button_checkbox",
                                    "title": "Square bubble",
                                    "callback": "toggleKeyAndValue",
                                    "key": "metadata.speech_bubble",
                                    "value": false,
                                    "onValue": "speech-bubble-square",
                                    "offValue": false,
                                    "bindings": [
                                        {
                                            "path": "metadata.speech_bubble",
                                            "attribute": "value"
                                        }
                                    ]
                                },
                                {
                                    "text": "Oval",
                                    "icon": "labicon-button_radio",
                                    "title": "Oval bubble",
                                    "callback": "toggleKeyAndValue",
                                    "key": "metadata.speech_bubble",
                                    "value": false,
                                    "onValue": "speech-bubble-oval",
                                    "offValue": false,
                                    "bindings": [
                                        {
                                            "path": "metadata.speech_bubble",
                                            "attribute": "value"
                                        }
                                    ]
                                },
                                {
                                    "text": "Dream",
                                    "icon": "labicon-cloud_up",
                                    "title": "Dream bubble",
                                    "callback": "toggleKeyAndValue",
                                    "key": "metadata.speech_bubble",
                                    "value": false,
                                    "onValue": "speech-bubble-dream",
                                    "offValue": false,
                                    "bindings": [
                                        {
                                            "path": "metadata.speech_bubble",
                                            "attribute": "value"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "group": "g2",
                            "text": "Quotation style",
                            "title": "Quotation style",
                            "items": [
                                {
                                    "icon": "labicon-preview",
                                    "text": "Display quotation mark",
                                    "title": "Hide or show quotation mark",
                                    "autocloseSubmenuAfterAction": false,
                                    "key": "metadata.hideQuotationMark",
                                    "onValue": false,
                                    "offValue": true,
                                    "callback": "toggleKeyAndValue",
                                    "bindings": [
                                        {
                                            "path": "metadata.hideQuotationMark",
                                            "attribute": "value",
                                            "valueTransformer": "toBoolean"
                                        }
                                    ]
                                },
                                                                {
                                    "icon": "labicon-preview",
                                    "text": "Display block line",
                                    "title": "Hide or show block line",
                                    "autocloseSubmenuAfterAction": false,
                                    "key": "metadata.hideBlockLine",
                                    "onValue": false,
                                    "offValue": true,
                                    "callback": "toggleKeyAndValue",
                                    "bindings": [
                                        {
                                            "path": "metadata.hideBlockLine",
                                            "attribute": "value",
                                            "valueTransformer": "toBoolean"
                                        }
                                    ]
                                },
                                {
                                    "inheritPath": "menu/buttons/backgroundColor.json",
                                    "icon": "labicon-color_palette",
                                    "text": "Color options",
                                    "title": "Quotation color options",
                                    "bindings": [
                                        {
                                            "path": "metadata.ui_color",
                                            "attribute": "value"
                                        }
                                    ],
                                    "params": {
                                        "colorPicker": {
                                            "preview": {
                                                "active": true,
                                                "selector": ".quotebox .content",
                                                "stylePath": null
                                            },
                                            "groups": [
                                                {
                                                    "values": "background_colors",
                                                    "eyeDropper": {
                                                        "key": "metadata.customQuotationMarkColor"
                                                    },
                                                    "title": "Quotation mark color",
                                                    "label": "",
                                                    "useValueAsLabel": false,
                                                    "cssPrefix": "",
                                                    "key": "metadata.quotationMarkColor",
                                                    "removeBtn": true,
                                                    "bordered": false,
                                                    "styleDefinition": "quotationMarkColor"
                                                },
                                                {
                                                    "values": "background_colors",
                                                    "eyeDropper": {
                                                        "key": "metadata.customBlockLineColor"
                                                    },
                                                    "title": "Block line color",
                                                    "label": "",
                                                    "useValueAsLabel": false,
                                                    "cssPrefix": "",
                                                    "key": "metadata.blockLineColor",
                                                    "removeBtn": true,
                                                    "bordered": false,
                                                    "styleDefinition": "blockLineColor"
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            }
        }
    },
    "editorSelectors": {
        "edit": ["lab-content-min-height"]
    },
    "draggable": {
        "icon": "labicon-quote"
    },
    "droppable": {
        "drop": {
            "sourceType": {
                "image": "replaceChild"
            },
            "default": "default"
        },
        "filedrop": "replaceChild"
    }
}