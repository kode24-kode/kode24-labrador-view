<div class="adunit" id='{{{ get.current.filtered.adData.code }}}{{#get.root.filtered.is_infiniteArticle}}_{{ get.root.id }}{{/get.root.filtered.is_infiniteArticle}}' {{#get.current.metadata.defaultHeight}}style="min-height:{{ get.current.metadata.defaultHeight }}px;"{{/get.current.metadata.defaultHeight}}></div>

<script>
    if ("{{ get.root.fields.page_template_alias }}" !== "infinitescroll") {
        var handleAsTablet = (Dac.clientData.device === 'tablet' || Dac.clientData.innerWidth < {{ get.current.filtered.googleAds.hideOnTabletWidth }});
        if (!(handleAsTablet && '{{ get.current.metadata.hideOnTablet }}' === 'true')) {
            lwhb.cmd.push(function() {
                lwhb.loadAd({tagId: '{{{ get.current.filtered.adData.code }}}'});
            });
        }
    }
</script>