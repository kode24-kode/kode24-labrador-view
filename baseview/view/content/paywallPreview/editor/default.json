                            "title": "Sidebar right layout",
                            "icon": "labicon-align_vertical_bottom",
                            "callback": ["toggleKeyAndValue", "redraw"],
                            "key": "fields.paywallLayoutType",
                            "value": false,
                            "onValue": "paywallLayoutSidebarRight",
                            "offValue": false,
                            "bindings": [
                                {
                                    "pathHelper": {
                                        "type": "root"
