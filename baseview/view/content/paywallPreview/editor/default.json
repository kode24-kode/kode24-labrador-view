{
    "editors": {
        "paywallSalesPitchTitle": {
            "selector": "h4.sales-pitch-title",
            "fn": "EditRich",
            "key": "fields.paywallSalesPitchTitle",
            "menu": "rich_text",
            "placeholder": "Paywall: Click to add text",
            "inlineOnly": true,
            "modal": false,
            "allowReverting": true,
            "target": "root"
        },
        "paywallSalesPitchContent": {
            "selector": "div.pitch-content",
            "fn": "EditFull",
            "key": "fields.paywallSalesPitchContent",
            "menu": "rich_text_bodytext",
            "placeholder": "Paywall: Click to add text",
            "target": "root",
            "modal": false,
            "allowReverting": true,
            "allowNbsp": true,
            "inlineOnly": true,
            "contentReplacement": null,
            "displayWordCount": true,
            "displayCharCount": true,
            "displayReadtime": false,
            "allowedPastedTags": {
                "a": {
                    "attributes": ["href", "target"]
                },
                "p": { "attributes": [] },
                "h2": { "attributes": [] },
                "h3": { "attributes": [] },
                "ul": { "attributes": [] },
                "ol": { "attributes": [] },
                "li": { "attributes": [] }
            },
            "allowedEmptyTags": {
                "span": {
                    "attributes": ["class"]
                },
                "br": {
                    "attributes": []
                }
            }
        }
    },
    "toolMenus": {
        "rich_text": {
            "inheritPath": "menu/tool/rich_text.json"
        },
        "rich_text_bodytext": {
            "inheritPath": "menu/tool/rich_text_bodytext.json"
        }
    },
    "contentMenus": {
        "default": {
            "items": {
                "color_bg": null,
                "paywallSalesImage": {
                    "pathHelper": {
                        "type": "root"
                    },
                    "title": "Show image",
                    "icon": "labicon-image",
                    "callback": ["toggleKeyAndValue", "redraw"],
                    "key": "fields.paywallSalesImage",
                    "onValue": "1",
                    "offValue": false,
                    "bindings": [
                        {
                            "pathHelper": {
                                "type": "root"
                            },
                            "path": "fields.paywallSalesImage",
                            "attribute": "value"
                        }
                    ]
                },
                "paywallLayoutSettings": {
                    "group": "g5",
                    "icon": "labicon-edit",
                    "title": "Paywall poster layout",
                    "items": {
                        "paywallLayoutStandard": {
                            "pathHelper": {
                                "type": "root"
                            },
                            "text": "Standard layout",
                            "title": "Standard layout",
                            "icon": "labicon-align_vertical_bottom",
                            "callback": ["toggleKeyAndValue", "redraw"],
                            "key": "fields.paywallLayoutType",
                            "value": false,
                            "onValue": "paywallLayoutStandard",
                            "offValue": false,
                            "bindings": [
                                {
                                    "pathHelper": {
                                        "type": "root"
                                    },
                                    "path": "fields.paywallLayoutType",
