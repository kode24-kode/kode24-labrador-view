                        "paywallLayoutSidebarFull": {
                            "pathHelper": {
                                "type": "root"
                            },
                            "text": "Sidebar full layout",
                            "title": "Sidebar Full layout",
                            "icon": "labicon-align_vertical_bottom",
                            "callback": ["toggleKeyAndValue", "redraw"],
                            "key": "fields.paywallLayoutType",
                            "value": false,
                            "onValue": "paywallLayoutSidebarFull",
                            "offValue": false,
                            "bindings": [
                                {
                                    "pathHelper": {
