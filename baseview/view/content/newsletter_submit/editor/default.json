{
    "editors": {
        "title": {
            "selector": "h4",
            "fn": "EditRich",
            "key": "fields.newsletterDataTitle",
            "menu": "rich_text",
            "placeholder": "",
            "modal": false,
            "allowReverting": true
        },
        "description": {
            "selector": "p.description",
            "fn": "EditRich",
            "key": "fields.newsletterDataDescription",
            "menu": "rich_text",
            "placeholder": "Click to add description",
            "modal": false,
            "allowReverting": true
        },
        "footerText": {
            "selector": "p.lab-newsletter-footer-text",
            "fn": "EditRich",
            "key": "fields.newsletterFooterText",
            "menu": "rich_text",
            "placeholder": "Click to add footer text",
            "modal": false,
            "allowReverting": true
        }
    },
    "toolMenus": {
        "rich_text": {
            "inheritPath": "menu/tool/rich_text.json"
        }
    },
    "contentMenus": {
        "default": {
            "items": {
                "editSettings": {
                    "group": "g5",
                    "icon": "labicon-edit",
                    "callback": "displaySettingsPanel",
                    "title": "Settings (,)",
                    "hotkeys": [{
                        "key": ","
                    }],
                    "params": {
                        "settingsPanelOptions": "settingsPanels.admin"
                    }
                }
            }
        }
    },
    "settingsPanels": {
        "admin": {
            "template": "content/newsletter_submit/template/settings"
        }
    },
    "viewportMap": {
        "fields": {
            "newsletterDataTitle": "presets.vp_content_attributes",
            "newsletterDataDescription": "presets.vp_content_attributes",
            "newsletterFooterText": "presets.vp_content_attributes"
        }
    }
}
