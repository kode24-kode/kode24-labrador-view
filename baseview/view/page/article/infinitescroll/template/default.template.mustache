<div data-article-url="{{{ get.current.filtered.url }}}" class="infiniteArticle" id="infiniteArticle-{{ get.current.id }}">
    {{ #render.partial }}infiniteTracking{{ /render.partial }}
    <section class="main article infiniteSection" id="infiniteSection-{{ get.current.id }}">
        {{{ selector.placement_top }}}
        <main class="pageWidth">
            <article class="{{ #get.current.fields.pageBackgroundColor }}bg-baseview-custom{{ /get.current.fields.pageBackgroundColor }} {{ get.current.fields.pageFontColor }}{{ #get.current.fields.pageBackgroundColorStyle }} bg-baseview-custom{{ /get.current.fields.pageBackgroundColorStyle }}">
                <section class="main article k5a-article" id="main-{{ get.current.id }}">
                    {{{ child.articleHeader }}}
                    {{ #get.current.filtered.page_settings.social.display.bodytext_before }}
                    <div class="row social">
                        <div class="column large-12 small-12">
                        {{ #get.current.filtered.page_settings.social.items }}
                        {{ > partial/social_button }}
                        {{ /get.current.filtered.page_settings.social.items }}
                        </div>
                    </div>
                    {{ /get.current.filtered.page_settings.social.display.bodytext_before }}
                    {{ #get.current.filtered.ageWarning }}
                    {{ > partial/ageWarning }}
                    {{ /get.current.filtered.ageWarning }}
                    <div id="infiniteCollapse-{{ get.current.id }}" class="infiniteCollapse">
                        {{{ child.bodytext }}}
                        {{{ child.articleFooter }}}
                        {{ #get.current.filtered.page_settings.social.display.bodytext_after }}
                        <div class="row social">
                            <div class="column large-12 small-12">
                                {{ #get.current.filtered.page_settings.social.items }}
                                {{ > partial/social_button }}
                                {{ /get.current.filtered.page_settings.social.items }}
                            </div>
                        </div>
                        {{ /get.current.filtered.page_settings.social.display.bodytext_after }}
                    </div>
                </section>
            </article>
        </main>
        {{{ selector.placement_left }}}
        {{{ selector.placement_right }}}
        {{ #app.isFront }}
            <template class="definitionTemplate">
                <div class="definitionPopup">
                    <div class="definitionInfo">
                        <p></p>
                        <span></span>
                        <button class="definitionClose">&#10005;</button>
                    </div>
                </div>
            </template>
        {{ /app.isFront }}
        {{ #render.partial }}afterArticle{{ /render.partial }}
    </section>
    {{ > partial/pagescripts/labArticleData }}
    
    <script>
        {{ #app.isFront }}
            (function() {
                const audioPlayers = document.querySelectorAll("#infiniteSection-{{ get.current.id }} .dacInlineAudio");
                for (const audioPlayer of audioPlayers) {
                    window.dachserData.push("audioInline", audioPlayer);
                }
                if (window.baseviewModulesReflowAll) {
                    window.baseviewModulesReflowAll("audioInline"); 
                }
            })();            
        {{ /app.isFront }}
    </script>
</div>
