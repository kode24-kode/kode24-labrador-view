    "resize": {
        "gridstops": {
            "mobile": [
                3,
                6,
                9
            ]
        }
    },
    "minimap": {
        "structure": "dropZone",
        "pageType": [
            "front"
        ]
    },
    "exitWarning": "all",
    "publish": {
        "retry": {
            "count": 4,
            "delay": 2000
        },
        "options": {
            "notice": {
                "hidden": true,
                "defaultHidden": false
            },
            "article": {
                "hidden": true,
                "defaultHidden": false
            }
        }
    },
    "autolock": {
        "timeout": 1800000
    },
    "networkWarning": {
        "offline": {
            "alert": true,
            "lockPage": true
        },
        "online": {
            "alert": true
        }
    },
    "image_preview": {
        "width": 1600,
        "compression": 50
    },
    "textTools": {
        "characterBlacklists": {
            "utf": [
                {
                    "modifiers": "gm",
                    "find-comment": "Match double hyphens (--) with space afterwards, at the beginning of a line or with space on either side",
                    "find": [
                        "(?<=\\s|>|^)-{2}(?=\\s)"
                    ],
                    "replace": "â€”"
                },
                {
                    "modifiers": "gi",
                    "find-comment": "Match co2 as long as its at the beginning of a line, or prefixed with whitespace and affixed with whitespace, dot or a comma.",
                    "find": [
                        "(?<=\\s|>|^)co2(?=\\s|\\,|\\.)"
                    ],
                    "replace": "CO<sub>2</sub>"
                },
                {
                    "modifiers": "gi",
                    "find-comment": "Match h2o as long as its at the beginning of a line, or prefixed with whitespace and affixed with whitespace, dot or a comma.",
                    "find": [
                        "(?<=\\s|>|^)h2o(?=\\s|\\,|\\.)"
                    ],
                    "replace": "H<sub>2</sub>O"
                }
            ]
        },
        "text_size": {
            "max": {
                "default": 200,
                "mobile": 100
            }
        },
        "defaultValues": {
            "link": {
                "target": ""
            }
        }
    },
    "structure_map": {
        "/row/": {
            "horizontal": {
                "path": "./columns/row/",
                "pathForSingleChild": ".",
                "condition": "--- Not in use ---",
                "exception": "--- Not in use ---",
                "blacklist": "--- Not in use ---"
            },
            "vertical": {
                "path": "."
            }
        },
        "/row/columns/row/": {
            "horizontal": {
                "path": ".",
                "maxSiblings": 3
            }
        },
        "/row/columns/row/columns/row/": {
            "vertical": {
                "path": "."
            }
        },
        "/bodytext/": {
            "horizontal": {
                "path": "./row/"
            },
            "vertical": {
                "path": "./row/"
            }
        },
        "/bodytext/row/": {
            "horizontal": {
                "path": "."
            },
            "vertical": {
                "path": "."
            }
        },
        "/articleHeader/articleMeta/": {
            "horizontal": {
                "path": "."
            },
            "vertical": {
                "path": "."
            }
        }
    }
