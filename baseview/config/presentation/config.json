{
    "lang": "no",
    "contentLanguage": "nb-NO",
    "timezone": "+1",
    "textDirection": "ltr",
    "grid": {
        "total_grid_spans": 12,
        "grid_prefix": {
            "mobile": "small-",
            "desktop": "large-"
        },
        "abs_grid_prefix": {
            "mobile": "small-abs-",
            "desktop": "large-abs-"
        }
    },

    "viewports": {
        "mobile": {
            "deviceWidth": 480,
            "editSlotWidth": 380,
            "padding": 96,
            "defaultVisible": true,
            "extendToAvailableWidth": false,
            "class_prefix": {
                "text_size": "tm",
                "text_color": "color_mobile_",
                "text_background_color": "color_mobile_",
                "text_align": "mobile_text_align_"
            }
        },
        "desktop": {
            "deviceWidth": 1058,
            "padding": 0,
            "defaultVisible": true,
            "extendToAvailableWidth": true
        },
        "rss": {
            "deviceWidth": 1058,
            "padding": 0,
            "noFallback": true,
            "noEdit" : true,
            "customHeaders": {
                "Content-Type": "text/xml",
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "*"
            },
            "descriptionPrefix": "Artikler fra forsiden "
        },
        "newssitemap": {
            "deviceWidth": 1058,
            "padding": 0,
            "noFallback": true,
            "noEdit" : true,
            "customHeaders": {"Content-Type": "application/xml"}
        },
        "json": {
            "deviceWidth": 1058,
            "padding": 0,
            "noFallback": true,
            "noEdit" : true,
            "renderer": "PageExport.jsonData",
            "customHeaders": {"Content-Type": "application/json"}
        },
        "oembed": {
            "deviceWidth": 1058,
            "padding": 0,
            "noFallback": true,
            "noEdit" : true,
            "renderer": "PageExport.oembed",
            "customHeaders": {"Content-Type": "application/json"}
        },
        "mobileApp": {
            "deviceWidth": 320,
            "editSlotWidth": 320,
            "padding": 0,
            "extendToAvailableWidth": true,
            "disallowOthers": true,
            "noEdit" : true
        },
        "mailmojo": {
            "deviceWidth": 640,
            "padding": 0,
            "noFallback": true,
            "noEdit" : true
        },
        "embed": {
            "deviceWidth": 640,
            "padding": 0,
            "noFallback": false,
            "noEdit" : true
        }
    },

    "sites": {
        "default": {
            "resource_map": "resource_map"
        }
    },

    "viewport": "desktop",
    "touchEditingViewport": "mobileApp",

    "image": {
        "defaultAspectRatio": 0.45,
        "socialAspectRatio": 0.57,
        "defaultBoundingBoxWidthRatio": 1,
        "fallbackUrl": ""
    },

    "displayReadProgress": {
        "active": false,
        "minElementCount": 25
    },

    "contentbox_settings": {
        "chart": {
            "require": {
                "js": [
                    "/view-resources/public/common/ChartJS/Chart.js"
                ]
            }
        },
        "tvguide": {
            "require": {
                "css": [
                    "/view-resources/baseview/view/css/elements/tvguide.css"
                ]
            }
        },
        "byline": {
            "template": [{
                "keys": ["firstname", "lastname"],
                "url": "public_email"
            }, {
                "keys": ["description"]
            }],
            "imageAbove": true,
            "imageBelow": false,
            "enableDescriptionLength": false,
            "descriptionLength": 45
        },
        "frontContent": {
            "sources": [
                {
                    "url": "${front_api_url}/api/v1/article/?orderBy=published&htmlText=1&query=visibility_status:P%20AND%20published:[*%20NOW]%20AND%20NOT%20hidefromfp_time:[*%20NOW]",
                    "urlEditor": "${customer_cms_url}/api/v1/article/?orderBy=published&htmlText=1&query=visibility_status:P%20AND%20published:[*%20NOW]%20AND%20NOT%20hidefromfp_time:[*%20NOW]",
                    "type": "LabradorApi",
                    "name": "Labrador articles",
                    "identifier": "lab-api-all"
                },
                {
                    "url": "${front_api_url}/api/v1/article/?orderBy=published&htmlText=1&site_id=${site.id}&query=visibility_status:P%20AND%20published:[*%20NOW]%20AND%20NOT%20hidefromfp_time:[*%20NOW]",
                    "urlEditor": "${customer_cms_url}/api/v1/article/?orderBy=published&htmlText=1&site_id=${site.id}&query=visibility_status:P%20AND%20published:[*%20NOW]%20AND%20NOT%20hidefromfp_time:[*%20NOW]",
                    "type": "LabradorApi",
                    "name": "Labrador articles for current site",
                    "identifier": "lab-api-site"
                }
            ]
        },
        "tagboard": {
            "cookieOptions": {
                "allow": false
            },
            "tagsOptions": {
                "displayTagsString": false,
                "displayTagsGroups": true,
                "tagsGroupsDefaultVisible": false,
                "hideHitsPerTag": false,
                "tagGroupInRows": false
            },
            "displaySites": true,
            "sources": [
                {
                    "url": "${front_api_url}/api/v1/article/?orderBy=published&htmlText=1&query=visibility_status:P%20AND%20published:[*%20NOW]%20AND%20NOT%20hidefromfp_time:[*%20NOW]",
                    "urlEditor": "${customer_cms_url}/api/v1/article/?orderBy=published&htmlText=1&query=visibility_status:P%20AND%20published:[*%20NOW]%20AND%20NOT%20hidefromfp_time:[*%20NOW]",
                    "type": "LabradorApi",
                    "name": "Labrador-artikler",
                    "identifier": "lab-api-all"
                }
            ]
        },
        "scrollbox": {
            "dataForAddedChild": {
                "article": {
                    "metadata": {
                        "floatingTitle": true,
                        "floatingSubtitle": true,
                        "floatingKicker": true,
                        "hidesubtitle": true,
                        "floatingTextSubset": true,
                        "floatingTextStyle": "bg-white"
                    },
                    "contentdata": {
                        "fields.displayByline": false
                    },
                    "children": {
                        "image": {
                            "contentdata": {
                                "fields.whRatio": "1.0",
                                "fields.bbRatio": "0.4",
                                "fields.viewports_json.mobile.fields.whRatio": "0.6"
                            }
                        }
                    }
                }
            }
        },
        "articleLists": {
            "require": {
                "js": [
                    "/view-resources/public/common/ArticleLists.js"
                ]
            }
        },
        "topcomments": {
            "dateTemplate": "{{ D }}. {{ MMMM }} {{ YYYY }} - {{ HH }}:{{ mm }}"
        },
        "livefeed": {
            "updateFrequency": [{
                "range": [0, 600],
                "interval": 10
            }, {
                "range": [600, 1200],
                "interval": 30
            }, {
                "range": [1200],
                "interval": 60
            }]
        }
    },

    "page_settings": {
        "article": {
            "social": {
                "display": {
                    "bodytext_before": false,
                    "bodytext_after": true,
                    "header": true
                },
                "items": {
                    "facebook": {
                        "display": true,
                        "icon": "fi-social-facebook"
                    },
                    "twitter": {
                        "display": true,
                        "icon": "fi-social-twitter"
                    },
                    "linkedin": {
                        "display": false,
                        "icon": "fi-social-linkedin"
                    },
                    "mail": {
                        "display": true,
                        "icon": "fi-mail"
                    },
                    "threads": {
                        "display": false,
                        "icon": "fi-social-threads"
                    },
                    "copyLink": {
                        "display": false,
                        "icon": "fi-social-copyLink",
                        "isButton": true
                    },
                    "glimta": {
                        "display": false,
                        "icon": "fi-social-glimta"
                    },
                    "talandeWebb": {
                        "display": false,
                        "icon": "fi-social-talandeWebb",
                        "isButton": true
                    },
                    "bluesky": {
                        "display": false,
                        "icon": "fi-social-bluesky"
                    },
                    "reddit": {
                        "display": false,
                        "icon": "fi-social-reddit"
                    },
                    "whatsapp": {
                        "display": false,
                        "icon": "fi-social-whatsapp"
                    }
                }
            },
            "showTags": true
        },
        "gallery": {
            "active": false,
            "displayHeader": true,
            "displayFooter": true,
            "pageBackgroundColor": "#000000",
            "pageTextColor": "#ffffff",
            "logImageView": false
        },
        "footer": {
            "poweredBy": {
                "display": true,
                "text": "Powered by Labrador CMS",
                "target": "_blank",
                "href": "https://labradorcms.com/",
                "css": ""
            }
        }
    },

    "imageUrlOptions" : {
        "extension" : ".webp",
        "nameField" : "instance_of"
    },

    "embeddable": {
        "active": false
    },

    "imageLoading": {
        "lazy": true
    },
    "cookieConsent": {
        "enabled": false,
        "cookieName": "CookieConsent",
        "consents": [
            "necessary",
            "preferences",
            "statistics",
            "marketing"
        ],
        "insufficientConsentMessage": "Content is hidden due to insufficient cookie consent.",
        "contentboxes": [
            {
                "name": "youtube",
                "requiredConsent": "necessary",
                "insufficientConsentMessage": "Video is hidden due to insufficient cookie consent."
            }
        ]
    },
    "style_definitions": {
        "fontface": [],
        "rules": []
    },
    "autoFontSize": {
        "enabled": false,
        "regex": {
            "wordsWithNumberBefore": "\\d+\\.?\\s+[A-Za-zÀ-ȕ]+",
            "wordsWithNumberInParenthesesAfter": "[A-Za-zÀ-ȕ]+\\s+\\(\\d+\\)"
        },
        "formats": {
            "default": {
                "maxWordLength": 15,
                "minLineLength": 3,
                "ranges": [
                    {
                    "maxCharacters": 12,
                    "numberOfLines": 1
                    },
                    {
                    "maxCharacters": 32,
                    "numberOfLines": 2
                    },
                    {
                    "maxCharacters": 52,
                    "numberOfLines": 3
                    },
                    {
                    "maxCharacters": 1000,
                    "numberOfLines": 4
                    }
                ]
            }
        }
    }
}
